@model MarwanMamdohW2_0523016.Models.Entites.TeamMember

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TeamMember</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TeamMemberid" class="btn btn-warning">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model?.TeamMemberid" class="btn btn-danger">Delete</a> |
</div>
<h1>Tasks</h1>
<table class="table table-striped">
    <thead class="table table-dark">
    <th> TaskTitle</th>
    <th>status</th>
    <th>prirority</th>
    <th>Deadline</th>
    </thead>
    <tbody>
        @foreach (var item in Model.tasks)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Status</td>
                <td>@item.Prirority</td>
                <td>@item.Date</td>
            </tr>
        }
    </tbody>
</table>

